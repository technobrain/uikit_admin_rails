<% content_for :title do %>
Comments
<% end %>

<% content_for :page_title do %>
Comments
<% end %>

<% content_for :breadcrumb do -%>
  <ul class="uk-breadcrumb">
    <li><%= link_to 'TOP', '/' %></li>
    <li>
      
      <%= link_to 'Comments', admin_comments_path %>
      
    </li>
  </ul>
<% end %>

<div class="uk-align-right">

<%= link_to 'New Comment', new_admin_comment_path, class: 'uk-button uk-button-small uk-button-primary' %>

</div>

<table class="uk-table uk-table-divider uk-table-small uk-text-small">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        
        <td><%= link_to 'Show', admin_comment_path(comment) %></td>
        <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
