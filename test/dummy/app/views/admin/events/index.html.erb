<% content_for :title do %>
Events
<% end %>

<% content_for :page_title do %>
Events
<% end %>

<% content_for :breadcrumb do -%>
  <ul class="uk-breadcrumb">
    <li><%= link_to 'TOP', '/' %></li>
    <li>
      
      <%= link_to 'Events', admin_events_path %>
      
    </li>
  </ul>
<% end %>

<div class="uk-align-right">

<%= link_to 'New Event', new_admin_event_path, class: 'uk-button uk-button-small uk-button-primary' %>

</div>

<table class="uk-table uk-table-divider uk-table-small uk-text-small">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        
        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
