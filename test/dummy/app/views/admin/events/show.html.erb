<% content_for :title do %>
Event
<% end %>

<% content_for :page_title do %>
Event
<% end %>

<% content_for :breadcrumb do -%>
  <ul class="uk-breadcrumb">
    <li>
      <%= link_to 'TOP', '/' %>
    </li>
    
    <li>
      <%= link_to 'Events', admin_events_path %>
    </li>
    <li>
      <%= link_to 'Event', admin_event_path(@event) %>
    </li>
    
  </ul>
<% end %>

<% content_for :subnav do -%>
  <ul class="uk-subnav uk-subnav-divider">
    <li>
      
      <%= link_to admin_events_path do %>
      
        <span uk-icon="list"> </span>
        List
      <% end %>
    </li>
    <li>
      
      <%= link_to edit_admin_event_path(@event) do %>
      
        <span uk-icon="file-edit"> </span>
        Edit
      <% end %>
    </li>
  </ul>
<% end %>

<div class="uk-form-horizontal">
  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">
      Title:
    </label>
    <div class="uk-form-controls uk-form-controls-text">
      <%= @event.title %>
    </div>
  </div>
  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">
      Description:
    </label>
    <div class="uk-form-controls uk-form-controls-text">
      <%= @event.description %>
    </div>
  </div>
  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">
      Start date:
    </label>
    <div class="uk-form-controls uk-form-controls-text">
      <%= @event.start_date %>
    </div>
  </div>
</div>
