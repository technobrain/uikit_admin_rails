
<%= form_with(model: [:admin, event], local: true, class: 'uk-form-horizontal') do |form| %>

  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uk-margin">
  <%= form.label :title, class: 'uk-form-label' %>
    <div class="uk-form-controls">
    <%= form.text_field :title, id: :event_title, class: 'uk-input uk-form-width-large' %>
    </div>
  </div>
  <div class="uk-margin">
  <%= form.label :description, class: 'uk-form-label' %>
    <div class="uk-form-controls">
    <%= form.text_area :description, id: :event_description, class: 'uk-textarea uk-form-width-large' %>
    </div>
  </div>
  <div class="uk-margin">
  <%= form.label :start_date, class: 'uk-form-label' %>
    <div class="uk-form-controls">
    <%= form.date_select :start_date, {}, { id: :event_start_date, class: 'uk-select uk-form-width-small' } %>
    </div>
  </div>

<br />

<div class="uk-child-width-expand" uk-grid>
  <div uk-grid>
    <div class="actions">
      <%= form.submit nil, class: 'uk-button uk-button-small uk-button-primary' %>
    </div>
    <div class="actions">
      <%= link_to admin_events_path, class: 'uk-button uk-button-small uk-button-default' do %>
        Cancel
      <% end %>
    </div>
  </div>
  <% if form.object.persisted? %>
  <div>
    <div class="actions">
      <%= link_to 'Delete Event', admin_event_path(@event),
                   method: :delete,
                   class: 'uk-button uk-button-small uk-button-danger uk-align-right',
                   data: { confirm: 'Are you sure?' }
      %>
    </div>
  </div>
  <% end %>
</div>
<% end %>
