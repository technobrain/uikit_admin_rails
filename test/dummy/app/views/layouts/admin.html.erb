<% content_for :sidebar_nav do %>
<%= render 'shared/admin/nav_menu' %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <%= yield :offcanvas %>

    <nav uk-sticky class="tb-navbar-container ukx-navbar-container uk-light uk-sticky uk-sticky-fixed" uk-navbar>
      <%= render 'shared/header' %>
    </nav>

    <div class="tb-sidebar-left-bottom uk-light-x uk-visible@m uk-section">
      <div>
        <%= yield :sidebar_nav %>
      </div>
    </div>

    <div class="tb-main uk-section uk-section-default">
      <div class="uk-container uk-container-large uk-position-relative">

        <div class="uk-section uk-padding-small">

          <%= render 'shared/notice' %>

          <div uk-grid>
            <div class="uk-width-1-2">
              <h3 class="uk-h3"><%= yield :page_title %></h3>
            </div>
            <div class="uk-width-1-2">
              <div class="uk-align-right">
                <%= yield :breadcrumb %>
              </div>
            </div>
          </div>

          <%= yield :subnav %>

          <%= yield %>

        </div>
      </div>
    </div>
  </body>
  </html>
